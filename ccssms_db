CREATE TABLE USERS (
  USER_ID INT(11) AUTO_INCREMENT PRIMARY KEY,
  IDNO INT(11) UNIQUE NOT NULL,
  LASTNAME VARCHAR(20) NOT NULL,
  FIRSTNAME VARCHAR(20) NOT NULL,
  MIDNAME VARCHAR(20),
  COURSE VARCHAR(50) NOT NULL,
  YEAR VARCHAR(15) NOT NULL,
  USERNAME VARCHAR(30) UNIQUE NOT NULL,
  PASSWORD VARCHAR(255) NOT NULL
  SESSION INT(11) DEFAULT 30,
  PROFILE_PIC VARCHAR(255) DEFAULT user/images/snoopy.jpg
)

CREATE TABLE ADMIN (
  ADMIN_ID INT(11) AUTO_INCREMENT PRIMARY KEY,
  USERNAME VARCHAR(30) UNIQUE NOT NULL,
  PASSWORD VARCHAR(255) NOT NULL
)

CREATE ANNOUNCEMENT (
  ANNOUNCE_ID INT(11) AUTO_INCREMENT PRIMARY KEY,
  TITLE VARCHAR(255) NOT NULL,
  CONTENT TEXT NOT NULL,
  CREATED_AT TIMESTAMP DEFAULT GET DATE() NOT NULL,
  ADMIN_ID INT(11) AUTO_INCREMENT,
  FOREIGN KEY (ADMIN_ID) REFERENCES ADMIN(ADMIN_ID)
)